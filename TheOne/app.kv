<QuickNoteScreen>:
    name: 'quick-note-screen'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            spacing: 10
            MDCard:
                radius: [10]
                padding: [0,0,5,0]
                md_bg_color: '#2A2B2A' if app.theme_cls.theme_style=='Dark' else '#FEEFE5'
                on_release: root.saveContent()
                ripple_behavior: True
                MDLabel:
                    text: 'Save'
                    halign: 'center'
                MDIcon:
                    icon: 'content-save'
                    pos_hint: {'center_y': 0.5}
            MDCard:
                radius: [10]
                padding: [0,0,5,0]
                md_bg_color: '#2A2B2A' if app.theme_cls.theme_style=='Dark' else '#FEEFE5'
                on_release: root.cleartext()
                ripple_behavior: True
                MDLabel:
                    text: 'Clear'
                    halign: 'center'
                MDIcon:
                    icon: 'delete'
                    pos_hint: {'center_y': 0.5}
            MDCard:
                radius: [10]
                padding: [0,0,5,0]
                md_bg_color: '#2A2B2A' if app.theme_cls.theme_style=='Dark' else '#FEEFE5'
                on_release: root.copyText()
                ripple_behavior: True
                MDLabel:
                    text: 'Copy'
                    halign: 'center'
                MDIcon:
                    icon: 'content-copy'
                    pos_hint: {'center_y': 0.5}

        MDTextField:
            id: quick_note_field
            size_hint: (1,1)
            mode: "rectangle"
            size_hint_x: 1
            multiline: True
            text_color_focus: '#000000'    # When focused (typing)
            text_color_normal: '#000000d0'    # When not focused
            line_color_focus: '#000000'  # Black border when focused
            line_color_normal: '#000000' # Black border when not focused


<RandomNumScreen>:
    name:'random-num-screen'
    BoxLayout:
        orientation:'vertical'
        padding:[15,20,15,0]
        MDLabel:
            text:'Enter the range for generation'
            halign:'center'
            font_style:'H6'
            size_hint_y:None
            height: self.texture_size[1] + dp(20)
        BoxLayout:
            orientation:'vertical'
            spacing:20
            BoxLayout:
                orientation:'horizontal'
                spacing:25
                # pos_hint:{'center_x':0.5,'center_y':0.7}
                ColoredTextField:
                    id: rangeStart
                    hint_text:'From'
                    input_filter: 'int'
                    keyboard_type: 'number'
                ColoredTextField:
                    id: rangeEnd
                    hint_text:'To'
                    input_filter: 'int'
                    keyboard_type: 'number'
            MDRaisedButton:
                text:'Generate'
                font_style: 'Button'
                on_press: root.RandomNumGen(rangeStart.text, rangeEnd.text)
                pos_hint:{'center_x':0.5}
                ripple_scale: 1.5

            MDCard:
                size_hint: (1, None)
                height: dp(150)
                elevation: 1
                padding: "15dp"
                md_bg_color: '#2A2B2A' if app.theme_cls.theme_style=='Dark' else '#FEEFE5'
                MDLabel:
                    text: 'Your Random Number'
                    halign:'center'
                    font_style:'H6'
                MDIcon:
                    icon: 'arrow-right'
                    pos_hint: {'center_y':0.5}
                MDLabel:
                    text: str(root.randomNum)
                    halign:'center'
                    font_style:'H4'
            Widget:
                size_hint: (1,0.5)


<ShortenUrlScreen>:
    name: 'shorten-url'
    BoxLayout:
        orientation:'vertical'
        padding: 15
        ColoredTextField:
            id: long_url
            hint_text: 'Enter the url:'
            size_hint_x: (0.8)
            pos_hint: {'center_x':0.5}
            mode: 'fill'
            fill_color_normal: 0, 0, 0, 0.4
            fill_color_focus: 0, 0, 0, 0.6
            text_color_focus: 1, 1, 1, 1
        Widget:
            size_hint_y: 0.2
        MDRaisedButton:
            text: 'Shorten'
            pos_hint: {'center_x':0.5}
            on_press: root.shorten_url(long_url.text)
            ripple_scale: 1.5
        Widget:
        MDCard:
            size_hint: (1,None)
            height: dp(150)
            elevation:1
            md_bg_color: '#2A2B2A' if app.theme_cls.theme_style=='Dark' else '#FEEFE5'
            padding:[15,0,15,10]
            orientation:'vertical'
            MDLabel:
                text: 'Shortened URL'
                halign: 'center'
                font_style: 'H6'
            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                MDTextField:
                    id: url_label
                    text: root.short_url
                    readonly: True
                    pos_hint: {'center_x':0.5}
                    size_hint_x: 0.8
                MDFloatingActionButton:
                    icon: 'content-copy'
                    on_release: root.copyURL()
                    elevation: 0
            Widget:
                size_hint: (None,0.1)
        Widget:

<TossCoinScreen>:
    name: 'toss-coin'
    BoxLayout:
        orientation:'vertical'
        Widget:
        MDLabel:
            text: root.coin
            halign:'center'
            font_style:'H4'
        MDRaisedButton:
            text: 'Toss'
            font_style: 'Button'
            ripple_scale: 1.5
            on_press: root.coinToss()
            pos_hint:{'center_x':0.5,'center_y':0.4}
        Widget:

<YTVideoDownloadScreen>:
    name: 'yt-download-screen'
    MDLabel:
        text: 'Coming Soon...'
        halign: 'center'
        font_style: 'H6'

<ColoredTextField@MDTextField>:
    text_color_focus: 1, 1, 1, 1
    hint_text_color_focus: 1, 1, 1, 0.7
    hint_text_color_normal: 1, 1, 1, 0.5
    line_color_focus: 1, 1, 1, 1
    fill_color_normal: 1, 1, 1, 0.1
    fill_color_focus: 1, 1, 1, 0.15

Screen:
    Image:
        source: app.bg_image_path
        allow_stretch: True
        keep_ratio: False
        size_hint: 1, 1
        pos_hint: {"x":0, "y":0}
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: 'TheOne'
            anchor_title: 'left'
            left_action_items: [['menu', lambda _: nav_draw.set_state('toggle')]]
            elevation: 0

            canvas.after:
                Color:
                    rgba: 1, 1, 1, 0.2  # Seperating line color (white with transparency)
                Line:
                    width: 1
                    points: self.x, self.y, self.right, self.y  # bottom border

        WindowManager:
            id: screen_manager

    MDNavigationDrawer:
        id:nav_draw
        width: min(dp(300), root.width * 0.85)
        
        canvas.before:
            Color:
                rgba: app.colorFromHex('#1B2021') if app.theme_cls.theme_style=='Dark' else app.colorFromHex('#fceef0ff')
            Rectangle:
                size: dp(10), self.height
                pos: self.x, self.y

        canvas.after:
            Color:
                rgba: (1, 1, 1, 0.2)  if app.theme_cls.theme_style=='Dark' else (0,0,0,0.2)     # Border color to seperate the navigation drawer and main screen
            Rectangle:
                pos: self.right - dp(1), self.y + dp(5)
                size: dp(1), self.height - dp(15)

        md_bg_color: '#1B2021' if app.theme_cls.theme_style=='Dark' else '#FFEAEE'

        ScrollView:
            BoxLayout:
                orientation:'vertical'
                padding:[5,0,5,0]
                MDLabel:
                    text: 'Welcome User'
                    font_style: 'H3'
                MDList:
                    OneLineIconListItem:
                        text: 'Home'
                        _no_ripple_effect: True
                        on_press:
                            nav_draw.set_state('close')
                            root.ids.screen_manager.current = 'home'
                        IconLeftWidget:
                            icon: 'home'
                            on_press:
                                nav_draw.set_state('close')
                                root.ids.screen_manager.current = 'home'
                    OneLineIconListItem:
                        text: 'Productivity'
                        _no_ripple_effect: True
                        on_press:
                            nav_draw.set_state('close')
                            root.ids.screen_manager.current = 'productivity-screen'
                        IconLeftWidget:
                            icon: 'clock'
                            on_press:
                                nav_draw.set_state('close')
                                root.ids.screen_manager.current = 'productivity-screen'
                    OneLineIconListItem:
                        text: 'Extras'
                        _no_ripple_effect: True
                        on_press:
                            nav_draw.set_state('close')
                            root.ids.screen_manager.current = 'extras'
                        IconLeftWidget:
                            icon: 'puzzle'
                            on_press:
                                nav_draw.set_state('close')
                                root.ids.screen_manager.current = 'extras'
                    OneLineIconListItem:
                        text: 'Settings'
                        _no_ripple_effect: True
                        on_press:
                            nav_draw.set_state('close')
                            root.ids.screen_manager.current = 'settings'
                        IconLeftWidget:
                            icon: 'cog'
                            on_press:
                                nav_draw.set_state('close')
                                root.ids.screen_manager.current = 'settings'
                Widget:
