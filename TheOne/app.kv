<WindowManager>:
    HomeScreen:
    ProductivityScreen:
    ExtrasScreen:
    SettingsScreen:
    QuickNoteScreen:
    RandomNumScreen:
    ShortenUrlScreen:
    TossCoinScreen:
    YTVideoDownloadScreen:

<HomeScreen>:
    name: 'home'
    ScrollView:
        bar_width: "0dp"
        MDBoxLayout:
            orientation:'vertical'
            padding:20
            spacing: 20
            size_hint_y: None
            adaptive_height: True
            BoxLayout:
                orientation: 'vertical'
                spacing: 20
                size_hint_y: None
                height: self.minimum_height
                Widget:
                    size_hint_y: 0.1
                MDLabel:
                    text:'Welcome, User!'
                    halign:'left'
                    font_style:'H4'
                    height: self.texture_size[1]
                Widget:
                    size_hint_y: None
                    height: dp(20)
                MDCard:
                    size_hint: None, None
                    size: (root.width * 0.8), self.minimum_height
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    elevation: 2
                    padding: [20,15,20,15]
                    spacing: "20dp"
                    md_bg_color: '#2A2B2A' if app.theme_cls.theme_style=='Dark' else '#FEEFE5'
                    orientation:'vertical'
                    MDIcon:
                        icon: 'format-quote-open'
                    MDLabel:
                        text: root.quotes()
                        size_hint_y: None
                        height: self.texture_size[1]
            MDSeparator:
                height: "1dp"
                color: 0,0,0,0.4
            BoxLayout:
                orientation: 'vertical'
                spacing: 15
                size_hint_y: None
                height: self.minimum_height
                MDLabel:
                    text: '[b]Quick Access[/b]'
                    markup: True
                    font_style: 'H5'
                    size_hint_y: None
                    height: self.texture_size[1]
                GridLayout:
                    cols: 3
                    spacing: 10
                    size_hint_y: None
                    height: self.minimum_height
                    MDCard:
                        size_hint_y: None
                        height: self.minimum_height
                        elevation: 1
                        padding: [10,15,10,15]
                        spacing: "10dp"
                        md_bg_color: '#2A2B2A' if app.theme_cls.theme_style=='Dark' else '#FEEFE5'
                        orientation:'vertical'
                        on_release: app.root.ids.screen_manager.current = 'quick-note-screen'
                        ripple_behavior: True
                        ripple_scale: 1.2
                        MDIcon:
                            icon: 'pencil'
                            pos_hint: {'center_x': 0.5}
                        MDLabel:
                            text: 'Quick\nNote'
                            halign: 'center'
                            font_style: 'Body2'
                            size_hint_y: None
                            height: self.texture_size[1]
                    MDCard:
                        size_hint_y: None
                        height: self.minimum_height
                        elevation: 1
                        padding: [10,15,10,15]
                        spacing: "10dp"
                        md_bg_color: '#2A2B2A' if app.theme_cls.theme_style=='Dark' else '#FEEFE5'
                        orientation:'vertical'
                        on_release: app.root.ids.screen_manager.current = 'shorten-url'
                        ripple_behavior: True
                        ripple_scale: 1.2
                        MDIcon:
                            icon: 'link'
                            pos_hint: {'center_x': 0.5}
                        MDLabel:
                            text: 'Shorten\nURL'
                            halign: 'center'
                            font_style: 'Body2'
                            size_hint_y: None
                            height: self.texture_size[1]
                    MDCard:
                        size_hint_y: None
                        height: self.minimum_height
                        elevation: 1
                        padding: [10,15,10,15]
                        spacing: "10dp"
                        md_bg_color: '#2A2B2A' if app.theme_cls.theme_style=='Dark' else '#FEEFE5'
                        orientation:'vertical'
                        on_release: app.root.ids.screen_manager.current = 'random-num-screen'
                        ripple_behavior: True
                        ripple_scale: 1.2
                        MDIcon:
                            icon: 'numeric'
                            pos_hint: {'center_x': 0.5}
                        MDLabel:
                            text: 'Random\nNumber'
                            halign: 'center'
                            font_style: 'Body2'
                            size_hint_y: None
                            height: self.texture_size[1]
            MDSeparator:
                height: "1dp"
                color: 0,0,0,0.4
                        

<ProductivityScreen>:
    name: 'productivity-screen'
    ScrollView:
        bar_width: "8dp"
        BoxLayout:
            id: tasks_section
            orientation: 'vertical'
            padding: 15
            spacing: 20
            height: self.minimum_height
            MDCard:
                orientation: 'vertical'
                elevation: 0.1
                size_hint_x: 1
                pos_hint: {'center_x':0.5}
                padding: [10,10,10,10]
                md_bg_color: '#2A2B2A' if app.theme_cls.theme_style=='Dark' else '#FEEFE5'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: self.minimum_height
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        MDLabel:
                            text: "Today's Tasks"
                            font_style: 'H6'
                            pos_hint: {'center_y':0.5}
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDSeparator:
                            height: "1dp"
                    MDIconButton:
                        icon: 'plus'
                        md_bg_color: app.theme_cls.primary_dark
                        pos_hint: {'center_y':0.5}
                        on_release: root.createTask()
                ScrollView:
                    bar_width: "2dp"
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        MDList:
                            id: tasks_list
                        Widget:
            # MDSeparator:
            #     height: "1dp"
            #     color: 0,0,0,0.4
            # Widget:
            
